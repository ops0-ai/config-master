# Production Environment Variables for Pulse
# Copy this file to .env and update the values for your deployment

# Your production domain (IMPORTANT for SSO to work correctly)
FRONTEND_URL=https://pulse.ops0.ai
WEB_URL=https://pulse.ops0.ai

# API URL (should match your production domain)
NEXT_PUBLIC_API_URL=https://pulse.ops0.ai/api

# Security Keys (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key12345
MASTER_ENCRYPTION_KEY=your-master-key-for-pem-files-12345

# Optional: AI and Cloud Integrations
OPENAI_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Optional: GitHub Integration
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://pulse.ops0.ai/api/github/callback

# Admin Account
DEFAULT_ADMIN_EMAIL=admin@pulse.dev
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# CORS Settings
ALLOW_SELF_HOSTED_CORS=true