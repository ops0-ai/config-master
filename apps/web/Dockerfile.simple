FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/

# Install dependencies
WORKDIR /app
RUN npm ci --workspace=web

# Copy source code
COPY apps/web ./apps/web

# Build the Next.js app
WORKDIR /app/apps/web
RUN npm run build

# Expose port
EXPOSE 3000

# Start the web app
CMD ["npm", "start"]